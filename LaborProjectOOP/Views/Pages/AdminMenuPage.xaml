<Page x:Class="LaborProjectOOP.Dekstop.Views.Pages.AdminMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LaborProjectOOP.Dekstop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1250"
      Title="AdminMenuPage">

    <Grid>
        <Grid x:Name="newPageGrid">
            <Frame x:Name="pagesFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        <Grid x:Name="menuPageGrid">

            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
                <Button Width="200" Height="30" Click="enterAsAdminBtn_Click">Enter as Admin</Button>
                <Button Width="200" Height="30" Click="enterAsCustomerBtn_Click">Enter as Customer</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
